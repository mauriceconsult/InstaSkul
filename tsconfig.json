{
  "compilerOptions": {
    /* --- Core Targets --- */
    "target": "ESNext", // Use modern JS output
    "lib": ["dom", "dom.iterable", "esnext"],

    /* --- Module System --- */
    "module": "ESNext", // Keep ES modules for SWC/Turbopack
    "moduleResolution": "Bundler", // âœ… Crucial for ESM libraries like @mux/mux-player-react
    "allowImportingTsExtensions": false, // Avoids '.ts' extension import errors

    /* --- Interop / TS Behavior --- */
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* --- Strictness & Safety --- */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* --- JSX / React --- */
    "jsx": "preserve", // Let Next handle JSX transform
    "incremental": true,

    /* --- Aliases & Paths --- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* --- Next.js Plugin --- */
    "plugins": [{ "name": "next" }]
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts", "middleware.mjs"],
  "exclude": ["node_modules"]
}
